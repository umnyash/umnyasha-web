block variables

doctype html
html.page(lang="ru")
  head
    meta(charset="utf-8")
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href= pageClass === 'article-page' ? '../../css/style.min.css' : 'css/style.min.css')
  body.page__body
    include ../components/components
    .page__inner
      +page-header
      block content
      +page-footer
